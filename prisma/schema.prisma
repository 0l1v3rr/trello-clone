generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  username      String   @unique
  password      String?
  status        String?
  image         String?
  active        Boolean?
  role          RoleEnum @default(USER)
  boards        Board[]  @relation("OwnedBoards")
  guestBoards   Board[]  @relation("GuestBoards")
  starredBoards Board[]  @relation("StarredBoards")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map(name: "users")
}

enum RoleEnum {
  USER
  ADMIN
}

model Board {
  id           String   @id @default(uuid())
  name         String
  slug         String
  image        Json
  public       Boolean
  owner        User     @relation("OwnedBoards", fields: [ownerId], references: [id])
  ownerId      String
  members      User[]   @relation("GuestBoards")
  starsGivenBy User[]   @relation("StarredBoards")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([slug, ownerId])
  @@map(name: "boards")
}
